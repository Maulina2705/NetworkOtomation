# ===============================================
# ğŸ® Ping Challenge Game (Replay + Custom Loop)
# ===============================================
!pip install ping3 pandas --quiet

import random
import time
from ping3 import ping
from datetime import datetime
import pandas as pd

# ===============================================
# âš™ï¸ Default Server List (20+)
# ===============================================
DEFAULT_HOSTS = [
    "8.8.8.8", "1.1.1.1", "google.com", "cloudflare.com", "yahoo.com",
    "facebook.com", "twitter.com", "youtube.com", "microsoft.com", "apple.com",
    "openai.com", "amazon.com", "aws.amazon.com", "github.com", "reddit.com",
    "bing.com", "twitch.tv", "discord.com", "zoom.us", "spotify.com",
    "wikipedia.org", "linkedin.com", "netflix.com", "steamcommunity.com"
]

# ===============================================
# ğŸ§  Core Game Function
# ===============================================
def play_ping_challenge(hosts, rounds=5):
    score = 0
    results = []

    print("\nğŸ® Welcome to *Ping Challenge!*")
    print("Guess which server responds the fastest!\n")

    # --- Custom Servers Setup ---
    custom_servers = []
    use_custom = input("âœ¨ Do you want to use your own servers? (y/n): ").lower()

    if use_custom == "y":
        print("You can add up to 3 servers.")
        while len(custom_servers) < 3:
            new_host = input(f"ğŸ§© Enter domain/IP ({len(custom_servers)+1}/3, or press Enter to stop): ").strip()
            if not new_host:
                break
            custom_servers.append(new_host)
            print(f"âœ… Added: {new_host}")
        print(f"\nğŸ†— Custom server list: {custom_servers}\n")
        if custom_servers:
            hosts = custom_servers  # use only custom servers

    print(f"âœ… Total servers available: {len(hosts)}")
    print("-" * 50)

    # --- Game Rounds ---
    for i in range(1, rounds + 1):
        print(f"\nğŸŒ€ Round {i}/{rounds}")

        # Auto pick if custom servers = 3
        if len(hosts) == 3 and hosts == custom_servers:
            sample = hosts
            print("ğŸ¯ Using your custom 3 servers:")
            for idx, h in enumerate(sample):
                print(f"  {idx+1}. {h}")
        else:
            print("Available servers:")
            for idx, h in enumerate(hosts):
                print(f"  {idx+1}. {h}")
            try:
                picks = input("\nğŸ¯ Pick 3 server numbers (e.g. 1 5 9): ")
                picks = [int(p) for p in picks.split() if p.isdigit()]
                if len(picks) != 3 or not all(1 <= p <= len(hosts) for p in picks):
                    raise ValueError
                sample = [hosts[p - 1] for p in picks]
            except ValueError:
                print("âš ï¸ Invalid input. Skipping this round.\n")
                continue

        # --- Guess Fastest ---
        try:
            choice = int(input("\nğŸ‘‰ Guess which one is the fastest (1â€“3): "))
            if not (1 <= choice <= 3):
                raise ValueError
        except ValueError:
            print("âš ï¸ Invalid guess. Skipping this round.\n")
            continue

        # --- Ping ---
        times = {}
        print("\nğŸ“¡ Pinging selected servers...")
        for h in sample:
            rtt = ping(h, unit='ms', timeout=2)
            times[h] = round(rtt, 2) if rtt else None
            time.sleep(0.5)

        # --- Fastest Result ---
        fastest = min(
            (h for h in sample if times[h] is not None),
            key=lambda h: times[h],
            default=None
        )

        print("\nğŸ“Š Ping Results:")
        for h, t in times.items():
            print(f" - {h}: {t if t else 'timeout'} ms")

        # --- Evaluate ---
        if fastest is None:
            print("âš ï¸ All hosts timed out! No winner this round.\n")
        elif sample[choice-1] == fastest:
            print(f"âœ… Correct! {fastest} is the fastest ({times[fastest]} ms)")
            score += 1
        else:
            print(f"âŒ Wrong! The fastest was {fastest} ({times[fastest]} ms)")

        results.append({
            "round": i,
            "chosen_hosts": sample,
            "guess": sample[choice-1] if 1 <= choice <= 3 else None,
            "fastest": fastest,
            "correct": sample[choice-1] == fastest if fastest else False,
            "rtts": times,
            "timestamp": datetime.now()
        })
        print("-" * 50)

    # --- Summary ---
    df = pd.DataFrame(results)
    print(f"\nğŸ Game Over! Final Score: {score}/{rounds}")
    print(df[["round", "guess", "fastest", "correct"]])

    return df


# ===============================================
# ğŸ” Replay Loop
# ===============================================
def start_game_loop():
    print("ğŸš€ Starting Ping Challenge Loop!\n")
    while True:
        df = play_ping_challenge(DEFAULT_HOSTS, rounds=5)

        # Ask if user wants to play again
        again = input("\nğŸ” Do you want to play again (custom/default)? (y/n): ").lower()
        if again != "y":
            print("\nğŸ‘‹ Thanks for playing Ping Challenge! Goodbye!")
            break
        print("\nâœ¨ Restarting game...\n")
        time.sleep(1)

# ===============================================
# â–¶ï¸ Run Loop
# ===============================================
start_game_loop()
